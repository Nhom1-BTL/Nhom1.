@model IEnumerable<NHOM1.Models.QuanLyDonHang>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-action="Create" class="btn btn-success">QuanLyDonHang</a>
</p>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ngaydatdon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Masanpham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThongTinSanPham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Makhachhang)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ngaydatdon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Masanpham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThongTinSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Makhachhang)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Madonhang">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Madonhang">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Madonhang">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
